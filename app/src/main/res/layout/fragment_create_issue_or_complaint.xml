<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_issue_or_complaint_coordinate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/create_issue_or_complaint_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/bbn_bottom_navigation_height"
        android:fillViewport="false"
        android:scrollbarStyle="insideOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_city_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Your City"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_city"
                style="@style/Theme.AndroSocio.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_city_header"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:background="@drawable/text_border"
                android:hint="your City"
                android:nextFocusDown="@+id/btn_signup"
                android:textColor="@color/colorBlack"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/text_issue_or_complaint_type_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_city"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Select Municipal Issue or Police Complaint"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_issue_or_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_issue_or_complaint_type_header"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:checkedButton="@id/radio_role_user"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:text="Municipal Issue" />

                <RadioButton
                    android:id="@+id/radio_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Police Complaint" />
            </RadioGroup>
            <TextView
                android:id="@+id/text_issue_access_type_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_issue_or_complaint"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Select Issue Access Type"
                android:textColor="@color/colorSecondaryText"
                android:visibility="gone"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_issue_access_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_issue_access_type_header"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:checkedButton="@id/radio_role_user"
                android:visibility="gone"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_issue_access_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:text="Private" />

                <RadioButton
                    android:id="@+id/radio_issue_access_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Public" />
            </RadioGroup>

            <TextView
                android:id="@+id/text_issue_or_complaint_main_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_issue_access_type"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Complaint or Issue Title"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_issue_or_complaint"
                style="@style/Theme.AndroSocio.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_issue_or_complaint_main_header"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:inputType="textCapSentences"
                android:background="@drawable/text_border"
                android:hint="Enter complaint or issue title"
                android:textColor="@color/colorBlack"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/text_complaint_or_issue_desc_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_issue_or_complaint"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Complaint or issue description"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_complaint_or_issue_desc"
                style="@style/Theme.AndroSocio.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_complaint_or_issue_desc_header"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:background="@drawable/text_border"
                android:gravity="start"
                android:hint="Enter complaint or issue description here"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="20"
                android:minLines="5"
                android:nextFocusDown="@+id/edit_last_name"
                android:textColor="@color/colorBlack"
                android:textCursorDrawable="@null" />


            <TextView
                android:id="@+id/text_capture_picture_header"
                style="@style/Theme.AndroSocio.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_complaint_or_issue_desc"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="Capture Picture"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_complaint_or_issue_layout"
                android:layout_width="@dimen/std_360_dp"
                android:layout_height="@dimen/std_200_dp"
                android:layout_below="@+id/text_capture_picture_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/std_10_dp"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/place_image"
                    android:layout_width="@dimen/std_360_dp"
                    android:layout_height="@dimen/std_200_dp"
                    android:contentDescription=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_camera_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@id/place_image"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/icon_background_dark_gray"
                    android:contentDescription="Camera Icon"
                    android:padding="10dp"
                    android:src="@drawable/ic_camera"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_complaint_or_issue_layout"
                android:layout_marginStart="@dimen/std_30_dp"
                android:layout_marginTop="@dimen/std_30_dp"
                android:layout_marginEnd="@dimen/std_30_dp"
                android:layout_marginBottom="@dimen/std_30_dp"
                android:background="@drawable/button_all_radius_rounded_deep_corner"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/std_18_sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>