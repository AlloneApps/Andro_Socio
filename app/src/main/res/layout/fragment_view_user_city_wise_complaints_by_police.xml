<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.roledetails.mnofficer.viewuserissues.ViewUserIssuesByOfficer">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="@dimen/std_20_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_city_header"
            style="@style/Theme.AndroSocio.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:text="@string/select_city_header"
            android:textColor="@color/colorAccepted"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_city"
            style="@style/Theme.AndroSocio.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_city_header"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:background="@drawable/text_border"
            android:drawableEnd="@drawable/ic_drop_down"
            android:hint="@string/select_city"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:visibility="visible" />

        <TextView
            android:id="@+id/city_complaint_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_city"
            android:layout_marginTop="@dimen/std_20_dp"
            android:gravity="center"
            android:text="City Complaints"
            android:textColor="@color/colorAccepted"
            android:textSize="@dimen/std_20_sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_user_issues_by_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_below="@+id/city_complaint_header"
            android:layout_marginTop="@dimen/std_10_dp" />

        <TextView
            android:id="@+id/no_complaints_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Complaints Available"
            android:textColor="@color/colorError"
            android:textSize="@dimen/std_16_sp"
            android:layout_marginTop="@dimen/std_300_dp"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>